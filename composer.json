{
    "name": "flamarkt/phone-number",
    "description": "Phone number for Flamarkt.",
    "keywords": [
        "flarum",
        "flamarkt",
        "marketplace",
        "ecommerce",
        "phone"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "flarum/core": "^1.7",
        "flamarkt/backoffice": "^0.1.0",
        "giggsey/libphonenumber-for-php": "^8.0"
    },
    "require-dev": {
        "flamarkt/core": "dev-main",
        "flamarkt/identity": "dev-main"
    },
    "authors": [
        {
            "name": "Flamarkt",
            "homepage": "https://flamarkt.org/"
        }
    ],
    "support": {
        "issues": "https://github.com/flamarkt/phone-number/issues",
        "source": "https://github.com/flamarkt/phone-number"
    },
    "autoload": {
        "psr-4": {
            "Flamarkt\\PhoneNumber\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Phone Number",
            "category": "flamarkt",
            "icon": {
                "name": "fas fa-mobile-alt",
                "backgroundColor": "#266a13",
                "color": "#fff"
            },
            "optional-dependencies": [
                "flamarkt/identity"
            ]
        },
        "flamarkt-backoffice": {
            "showInBackoffice": true,
            "hideFromAdmin": true
        }
    }
}
